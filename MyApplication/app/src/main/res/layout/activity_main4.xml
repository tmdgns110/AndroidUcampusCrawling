<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.Main4Activity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="prev"
        />
    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="next"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/prev" />
    </LinearLayout>
    <ViewFlipper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewFlipper"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentBottom="true">

    </ViewFlipper>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:id="@+id/scrollView" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="354dp"
                        android:layout_height="59dp"
                        android:id="@+id/textView" />

                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:id="@+id/scrollView3" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView3" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" >

                    <TextView
                        android:layout_width="354dp"
                        android:layout_height="59dp"
                        android:id="@+id/textView7" />
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:id="@+id/scrollView2" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView2" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" >

                    <TextView
                        android:layout_width="354dp"
                        android:layout_height="59dp"
                        android:id="@+id/textView6" />
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:id="@+id/scrollView4" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView4" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" >

                    <TextView
                        android:layout_width="354dp"
                        android:layout_height="59dp"
                        android:id="@+id/textView8" />
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:id="@+id/scrollView5" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView5" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" >

                    <TextView
                        android:layout_width="354dp"
                        android:layout_height="59dp"
                        android:id="@+id/textView9" />
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:id="@+id/scrollView6" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView6" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" >

                    <TextView
                        android:layout_width="354dp"
                        android:layout_height="59dp"
                        android:id="@+id/textView10" />
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:id="@+id/scrollView7" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView7" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" >

                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
